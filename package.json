{
  "babel": {
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "loose": true,
              "targets": {
                "browsers": [
                  "last 2 Chrome versions",
                  "last 2 Edge versions",
                  "Explorer >= 9",
                  "last 2 Firefox versions",
                  "last 2 Safari versions",
                  "iOS >= 9",
                  "Android >= 4.4",
                  "last 2 ChromeAndroid versions"
                ]
              }
            }
          ]
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "loose": true,
              "targets": {
                "browsers": [
                  "last 2 Chrome versions",
                  "last 2 Edge versions",
                  "Explorer >= 9",
                  "last 2 Firefox versions",
                  "last 2 Safari versions",
                  "iOS >= 9",
                  "Android >= 4.4",
                  "last 2 ChromeAndroid versions"
                ]
              }
            }
          ]
        ],
        "plugins": [
          "lodash"
        ]
      }
    }
  },
  "browserslist": {
    "development": [
      "last 2 Chrome versions",
      "last 2 Edge versions",
      "Explorer >= 9",
      "last 2 Firefox versions",
      "last 2 Safari versions",
      "iOS >= 9",
      "Android >= 4.4",
      "last 2 ChromeAndroid versions"
    ],
    "production": [
      "last 2 Chrome versions",
      "last 2 Edge versions",
      "Explorer >= 9",
      "last 2 Firefox versions",
      "last 2 Safari versions",
      "iOS >= 9",
      "Android >= 4.4",
      "last 2 ChromeAndroid versions"
    ]
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "fixpack": "^2.3.1",
    "webpack": "^2.4.1"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true
    },
    "extends": "eslint:recommended",
    "root": true
  },
  "postcss": {
    "local-plugins": true,
    "map": false,
    "parser": "scss",
    "plugins": {
      "autoprefixer": {}
    },
    "syntax": "postcss-scss"
  },
  "private": true,
  "scripts": {
    "compile": "npm run webpack",
    "develop": "npm run webpack -- --devtool inline-source-map --watch",
    "eslint": "eslint",
    "fixpack": "fixpack",
    "lint": "npm run eslint -- .",
    "minify": "NODE_ENV=production npm run webpack -- --optimize-minimize",
    "webpack": "webpack --colors --display-error-details --progress"
  }
}
